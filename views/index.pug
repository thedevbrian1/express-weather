doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="output.css")
        title Weather
    body 
        main(class="px-6 md:px-12 lg:px-0 lg:max-w-5xl mx-auto mt-16 text-gray-800")
            h1(class="font-bold text-4xl lg:text-6xl") Weather
            form(action="/", class="mt-8")
                div(class="flex gap-2 items-end")
                    div
                        label(for="search") Search city
                        input(type="search", name="q", autocomplete="off" class="block border border-slate-700 px-4 py-2 rounded-md")
                    button(type="submit" class="bg-orange-500 px-4 py-2 rounded-md") Search

            if weather 
                div(class="mt-16")
                    h2(class="font-bold text-2xl lg:text-4xl") Results
                    article(class="border border-gray-500 bg-slate-600 text-white rounded-md p-8 mt-4 max-w-fit")
                        h3(class="text-lg")= weather.name
                        div(class="flex gap-1 items-center") 
                            p(class="text-lg lg:text-2xl font-semibold") #{weather.main.temp} &deg;C
                            img(src= `https://openweathermap.org/img/wn/${weather.weather[0].icon}@2x.png`)
                        p(class="text-gray-300")= weather.weather[0].description